<form role="form" class="well" method="post">
<fieldset>

<!-- Form Name -->
<legend>Customer Check In Form</legend>

<!-- Select Basic -->
<div class="row form-item">
  <label class="col-xs-3 text-right" for="table_number">Table Number</label>
  <div class="col-xs-9">
    <select id="table_number" name="table_number" class="input-xlarge">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
      <option>10</option>
    </select>
  </div>
</div>

<!-- Text input-->
<div class="row">
  <label class="col-xs-3 text-right" for="num_pax">Number of Pax</label>
  <div class="col-xs-9">
    <input id="num_pax" name="num_pax" type="text" placeholder="Enter number" class="input-xlarge">
    <p class="help-block">Number of Guests</p>
  </div>
</div>

<!-- Select Basic -->
<div class="row">
  <label class="col-xs-3 text-right" for="server_name">Server Name</label>
  <div class="col-xs-9">
    <select id="server_name" name="server_name" class="input-xlarge">
      <option>John</option>
      <option>Joe</option>
      <option>Ashok</option>
      <option>Pablo</option>
      <option>Peter</option>
    </select>
     <p class="help-block">Number of Guests</p>
 </div>
</div>

<!-- Multiple Radios (inline) -->
<div class="row">
  <label class="col-xs-3 text-right" for="">Repeat Visitor</label>
  <div class="col-xs-9">
    <label class="radio inline" for="repeat-0">
      <input type="radio" name="repeat" id="repeat-0" value="Yes" checked="checked">
      Yes
    </label>
    <label class="radio inline" for="repeat-1">
      <input type="radio" name="repeat" id="repeat-1" value="No">
      No
    </label>
    <label class="radio inline" for="repeat-2">
      <input type="radio" name="repeat" id="repeat-2" value="Unknown">
      Unknown
    </label>
  </div>
</div>

<!-- Textarea -->
<div class="row">
  <label class="col-xs-3 text-right" for="remarks">Remarks</label>
  <div class="col-xs-9">                     
    <textarea id="remarks" name="remarks">Enter remarks or notes</textarea>
  </div>
</div>

<!-- buttons -->
<div class="row">
  <label class="col-xs-3 text-right">&nbsp;</label>
  <div class="col-xs-9">                     
    <button id="btn-check-in" name="singlebutton-0" class="btn btn-primary">Log Check In</button>

  </div>
</div>


</fieldset>
</form>
